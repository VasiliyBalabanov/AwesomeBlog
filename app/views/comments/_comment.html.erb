<%= div_for comment do %>
    <div class="title">
      <h3><%= comment.title %></h3>
    </div> 
    <div class="body">
      <p><%= comment.body %></p>
      <p><b>by</b>
        <%= User.find(comment.user_id).email %> (<%= time_ago_in_words comment.created_at %> ago)
      </p>
    </div>
  <hr>
<% end %>