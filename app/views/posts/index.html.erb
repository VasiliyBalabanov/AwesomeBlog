<% @posts.each do |post| %>
<div class="post_header">
  <p>
    <h1><%= link_to post.title, [@show_user, post] %></h1>
    (posted <%= time_ago_in_words post.created_at %> ago)
  </p>
</div>
<% end %>


<br />
<% if @user && @posts.first %>
 <% if @user.id == @posts.first.user_id %>>
   <%= link_to 'New Post', new_user_post_path( @user.id ) %>
 <% end %>
<% else if @user && @user.id == @show_user.id %>
  <%= link_to 'New Post', new_user_post_path( @user.id ) %>
<% end %>
<% end %>



<%= link_to 'Back', root_url %>