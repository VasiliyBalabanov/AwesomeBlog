<div class="posts">
<h1>
  <%= @post.title %>
</h1>

<p>
  
  <%= @post.body %>
  
</p>
<% if @user %>
  <%= link_to 'Edit', edit_user_post_path(@show_user, @post) %> |
  <%= link_to 'Destroy', [@show_user, @post], confirm: 'Are you sure?', method: :delete %> |
<% end %>
<%= link_to 'Back', user_posts_path(@show_user) %>

<hr>
</div>
<div id="comments">
<% if @comments.empty? %>
<div id="comments_count">
<h3>There's no comments yet</h3>
</div>
<% else %>
<div id="comments_count">
<h3><%= pluralize(@comments.count, 'Comment') %></h3>
</div>    <%= render @comments %>

<% end %> 
</div> 


<% if cookies[:auth_token] %>   
<h3 class="add">Add a comment:</h3>
<%= form_for([@show_user, @post, @post.comments.build], :remote => true) do |f| %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %><% end %>