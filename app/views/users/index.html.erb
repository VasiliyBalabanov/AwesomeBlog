<h2>This is the list of users</h2>

<% @users.each do |user| %>
 <%= div_for user do %>
    <%= link_to user.email, user_posts_path(user.id) %>
    <%= pluralize(user.posts.count, "post") %>
    <% if session[:user_id] %>
     
        <% if User.find(session[:user_id]).is_admin? %>
          <%= link_to "Destroy", user, confirm: 'Are you sure?', method: :delete, remote: true if user.id > 1 %>
        <% end %>
      
    <% end %>
  <% end %>
<% end %>
