<h1>This is the list of users</h1>

<table>
  <tr>
    <th>Email</th>
    <th>Number of posts</th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.email %></td>
    <td><%= user.posts.count %></td>
    <td><%= link_to 'Show', user_posts_path(user.id) %></td>
  </tr>
<% end %>
</table>